{
  "name": "@danehansen/color",
  "version": "0.1.1",
  "description": "color",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register -w",
    "coverage": "nyc mocha --compilers js:babel-register",
    "coverage-report": "nyc --reporter=html mocha --compilers js:babel-register",

    "_test": "mocha --compilers js:babel-register",
    "_babel": "babel src/color.js --out-file index.js",
    "max": "npm run _test && npm run _babel",

    "_babel_min": "babel src/danehansen-color.js --out-file danehansen-color.min.js",
    "_webpack_min": "webpack danehansen-color.min.js danehansen-color.min.js --define __BROWSER__=true",
    "_uglify_min": "uglifyjs danehansen-color.min.js -o danehansen-color.min.js -c dead_code,unused -m",
    "min": "npm run _babel_min && npm run _webpack_min && npm run _uglify_min",

    "prepublish": "npm run _babel",
    "everything": "npm run coverage-report && npm run max && npm run min",
    "git": "git add -A && git commit -m 'squish me' & git push -f origin master",
    "pub": "npm run everything && npm run git && npm publish --access public"
  },
  "keywords": [
    "color",
    "utilities"
  ],
  "author": "Dane Hansen <dane@danehansen.com> (http://www.danehansen.com/)",
  "license": "MIT",
  "devDependencies": {
    "@danehansen/package-helpers": "latest",
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "uglify-js": "^2.7.5",
    "webpack": "^1.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danehansen/color"
  }
}
